# --- Aliases ---

alias c='cd'
alias clhist='echo "" > ~/.zsh_history & exec $SHELL -l'
alias gitrm="rm -rf .git"
alias stsdir="cd ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User"
alias rm_modules="find . -name "node_modules" -type d -prune -exec rm -rf '{}' +"
alias gh="gh-home"

# --- Config ---

alias zcfg="vim ~/.zshrc"
alias zrld="source ~/.zshrc"

alias phpcfg='vim /usr/local/etc/php/7.1/php.ini'
alias loadnvm=". $HOME/.nvm/nvm.sh"

# --- Applications ---

alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias st="sublime"
alias pa="php artisan"
alias p-serve="python3 -m http.server 3000"
alias p-serve-o="python3 -m http.server 3000 && open http://localhost:3000"

# --- Functions ---

alias wp-bp="webpack-boilerplate"
alias g-bp="gulp-boilerplate"
alias mongoc="mongo-connect"

# --- Slask ---

alias kwmon="brew services start kwm"
alias kwmoff="brew services stop kwm"

alias imgur="imgur-screenshot.sh -l true"

alias a='fasd -a'        # any
alias s='fasd -si'       # show / search / select
alias d='fasd -d'        # directory
alias f='fasd -f'        # file
alias sd='fasd -sid'     # interactive directory selection
alias sf='fasd -sif'     # interactive file selection
alias z='fasd_cd -d'     # cd, same functionality as j in autojump
alias zz='fasd_cd -d -i' # cd with interactive selection
