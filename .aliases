# --- Aliases ---

alias c='cd'
alias clhist='echo "" > ~/.zsh_history & exec $SHELL -l'
alias gitrm="rm -rf .git"
alias stsdir="cd ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User"

# --- Config ---

alias zcfg="vim ~/.zshrc"
alias zrld="source ~/.zshrc"

alias phpcfg='vim /usr/local/etc/php/7.1/php.ini'
alias loadnvm=". $HOME/.nvm/nvm.sh"

# --- Applications ---

alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias st="sublime"
alias pa="php artisan"

# --- Functions ---

alias wp-bp="webpack-boilerplate"
alias g-bp="gulp-boilerplate"
alias mongoc="mongo-connect"

# --- Slask ---

alias kwmon="brew services start kwm"
alias kwmoff="brew services stop kwm"

alias imgur="imgur-screenshot.sh -l true"
